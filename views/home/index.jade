  block javascript
  script(src='/js/vendor/perfect-scrollbar-with-mousewheel.min.js')
  script.
    $(function () {

      if (window.location.hash && window.location.hash === '#_=_') {
        // If you are using Modernizr, then the alternative is:
        //   `if (Modernizr.history) {`
        if (window.history && history.pushState) {
          window.history.pushState('', document.title, window.location.pathname);
        } else {
          // Prevent scrolling by storing the page's current scroll offset
          var scroll = {
            top: document.body.scrollTop,
            left: document.body.scrollLeft
          };
          window.location.hash = '';
          // Restore the scroll offset, should be flicker free
          document.body.scrollTop = scroll.top;
          document.body.scrollLeft = scroll.left;
        }
      }

      var hash = window.location.hash.slice(1);
      if (hash.length > 0) {
        $('.tab-menu').parent().removeClass('active');
        $('.tab-menu[href=#'+ hash + ']').parent().addClass('active');
        $('.tab').removeClass('active');
        var tabname = '.tab.' + hash;
        var path = '/images/' + hash + '.png';
        $(tabname).addClass('active');
        $('img.title').attr('src', path);
      } else {
        $('.tab-menu').parent().removeClass('active');
        $('.tab-menu[href=#about]').parent().addClass('active');
        $('.tab').removeClass('active');
        var tabname = '.tab.about';
        var path = '/images/' + 'about' + '.png';
        $(tabname).addClass('active');
        $('img.title').attr('src', path);
      }
      
      $('.tab-menu').on('click', function (e) {
        $('.tab-menu').parent().removeClass('active');
        $(this).parent().addClass('active');
        $('.tab').removeClass('active');
        var tabname = '.tab.' + $(this).attr('href').slice(2);
        var path = '/images/' + $(this).attr('href').slice(2) + '.png';
        $(tabname).addClass('active');
        $('img.title').attr('src', path);
        


      });

    });