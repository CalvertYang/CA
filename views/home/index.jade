extends ../layout

block styles
  style.
    .header {
      width: 1440px;
      max-width: 1440px;
      margin: 0 auto;
      height: 185px;
      background: url('/images/header-bg.png');
      position: relative;
    }
    .container {
      width: 1440px;
      margin: 0 auto;
      padding: 0;
    }
    .footer {
      width: 1440px;
      height: 260px;
      margin: 0 auto;
      background: #6d0019; /* Old browsers */
      background: -moz-linear-gradient(top, #6d0019 0%, #8f0222 44%, #a90329 99%); /* FF3.6+ */
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#6d0019), color-stop(44%,#8f0222), color-stop(99%,#a90329)); /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(top, #6d0019 0%,#8f0222 44%,#a90329 99%); /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(top, #6d0019 0%,#8f0222 44%,#a90329 99%); /* Opera 11.10+ */
      background: -ms-linear-gradient(top, #6d0019 0%,#8f0222 44%,#a90329 99%); /* IE10+ */
      background: linear-gradient(to bottom, #6d0019 0%,#8f0222 44%,#a90329 99%); /* W3C */
      filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#6d0019', endColorstr='#a90329',GradientType=0 ); /* IE6-9 */
    }
    .footer .body {
      padding-top: 5rem;
      color: white;
      width: 960px;
      margin: 0 auto;
    }
    .footer .body  img {
      margin: 5px;
    }
    .content {
      width: 100%;
      min-height: 900px;
      max-height: 900px;
      overflow-y: hidden;
      overflow-x: auto;
      background: url('/images/main-bg.png');
      background-repeat: no-repeat;
      text-align: center;
      color: white;
    }
    .topbar {
      width: 100%;
      height: 3.2rem;
      background: rgba(0,0,0,0.5);
      border-bottom: 5px solid rgba(255, 255, 255, 0.2);
    }
    .menu {
      width: 100%;
      height: 4rem;
      background: transparent;
      position: absolute;
      bottom: -18px;

    }
    .nav ul {
      list-style-type: none;
      width: 960px;
      margin: 0 auto;
    }
    .nav ul li {
      display: inline-block;
      height: 3rem;
      padding: 0.5rem;
      margin-right: 1rem;
    }
    .nav ul.right li {
      float: right;
      border-bottom: 5px solid rgba(170, 31, 36, 0);
      margin-top: 2px;
    }
    .nav ul.right li:hover {
      border-bottom: 5px solid rgba(170, 31, 36, 0.8);
    }

    .nav ul li a {
      color: #b2b2b2;
      text-decoration: none;
    }
    .nav ul li a:hover {
      color: #aa1f24;
      text-decoration: none;
    }
    .menu ul li {
      border-bottom: 5px solid rgba(170, 31, 36, 0);
      line-height: 1.8rem;
    }
    .menu ul li a {
      color: rgba(255, 255, 255, 0.7);
      font-size: 1.4rem;
      margin: 2px;
      font-weight: 500;
    }
    .menu ul li:hover, .menu ul li.active{
      
      border-bottom: 5px solid rgba(170, 31, 36, 0.9);
    }
    .menu ul li.active a {
      color: #aa1f24;
    }
    .tab {
      display: none;
      width: 720px;
      margin: 0 auto;
    }
    .tab hr {
      border:0; 
      width: 80%;
      height:1px; 
      background-color: rgba(255, 255, 255, 0.2);
    }
    .tab.active {
      transation: all 1s linear 2s;
      display: block;
    }
    .ml {
      margin-left: 10px;
    }
    a.buy {
      display: block;
      width: 376px;
      height: 106px;
      background: url('/images/btn-buy.png');
      background-repeat: no-repeat;
      margin: 1rem auto;
    }
    a.buy:hover {
      background-position: 0 -106px;
    }

