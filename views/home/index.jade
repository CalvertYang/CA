  block javascript
  script.
    $(function () {
      $('.tab-menu').on('click', function () {
        $('.tab-menu').parent().removeClass('active');
        $(this).parent().addClass('active');
        $('.tab').removeClass('active');
        var tabname = '.tab.' + $(this).attr('href').slice(1);
        $(tabname).addClass('active');
      });

    });