extends ../layout

block styles
  style.
    body {
      overflow-x: hidden;
      background-color: #080605;
    }
    .video {
      width: 100%;
      height: 720px;
      background-color: #000;
      margin: 0 auto;
      padding-top: 40px;
      overflow: hidden;
      text-align: left;
    }
    .video video {
      position: relative;
      left: -10%;
      width: 70%;
    }
    .container {
      width: 1440px;
      margin: 0 auto;
      padding: 0;
      position: absolute;
      top: 0;
      background-color: transparent;
    }

    .header-title {
      width: 100%;
      position: absolute;
      text-align: right;
      padding-right:5%;
      top: 180px;
      right: 0;
    }

    a.btn-run {
      display:block;
      position: absolute;
      width: 200px;
      height: 60px;
      background: url('/images/btn-run.png');
      background-size: 200px 120px;
      background-repeat: no-repeat;
      right: 24rem;
      bottom: 0;

    }
    a.btn-run:hover {
      background-position: 0 -60px;
    }

block body
  .video
      video(autoplay, loop, muted, preload='auto')
        source(src='/video/shield-loop.ogv', type="video/ogg" )
        source(src='/video/shield-loop.mp4', type="video/mp4")
    .header-title
      img(src='/images/ca-title.png')
      a(class='btn-run', href='/index')
    
  block javascript
  script.
    $(function () {
      if (window.location.hash && window.location.hash === '#_=_') {
        // If you are using Modernizr, then the alternative is:
        //   `if (Modernizr.history) {`
        if (window.history && history.pushState) {
          window.history.pushState('', document.title, window.location.pathname);
        } else {
          // Prevent scrolling by storing the page's current scroll offset
          var scroll = {
            top: document.body.scrollTop,
            left: document.body.scrollLeft
          };
          window.location.hash = '';
          // Restore the scroll offset, should be flicker free
          document.body.scrollTop = scroll.top;
          document.body.scrollLeft = scroll.left;
        }
      }
    });